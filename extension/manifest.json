{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "iVelt Helper",
  "description": "Adds accessibility and usability improvements to אייוועלט.",
  "version": "1.9.10",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
		"*://*.ivelt.com/*",
        "*://*.yiddishworld.com/*",
        "*://*.198.153.76.147/*"
      ],
	  "css":["css/appcss.css"],
      "js": ["js/settingsHandler.js", "js/contentScript.js","js/refreshNotificationCount.js"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rule.json"
      }
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "tabs",
    "alarms",
    "cookies",
    "storage",
    "notifications",
	"declarativeNetRequestWithHostAccess",
    "background"
  ],
  "host_permissions": [
	"*://*.ivelt.com/*",
    "*://*.198.153.76.147/*",
    "*://*.yiddishworld.com/*",
    "*://www.xn--4dbhss5b.com/*"
  ],
  "web_accessible_resources": [
	{
		"resources": [
			"js/keyboardShortcuts.js",
			"js/newResponseNotification.js",
			"js/addGoogleSearch.js",
			"js/add_button.js",	
			"js/last_quote.js"
		],
		"matches": [
			"*://*.ivelt.com/*",
			"*://*.yiddishworld.com/*",
			"*://*.198.153.76.147/*"
		]
	}
  ],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true,
	"browser_style": true

  }
}
